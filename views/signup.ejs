<body>
  <div class="container">
    <!-- Bagian kiri -->
    <div class="left">
      <div class="overlay">
        <h1>Wedding Planner</h1>
        <h2>‚ÄúImpian Kita‚Äù</h2>
        <p>Mulai perjalanan cinta kalian bersama kami</p>
      </div>
    </div>

    <!-- Bagian kanan -->
    <div class="right">
      <h2>Buat Akun <span>Impian Kita</span></h2>
      <button class="google-btn">üîπ Sign Up with Google</button>
      <div class="or">or register with email</div>

      <!-- Form signup -->
      <form id="signupForm" action="/signup" method="POST">
        <input type="text" placeholder="Nama Lengkap" name="fullname" required>
        <input type="email" placeholder="Alamat Email" name="email" required>
        <input type="tel" placeholder="Nomor Telepon" name="phone_number" required>
        <input type="date" placeholder="Tanggal Lahir" name="birth_date" required>
        <input type="password" placeholder="Password" name="password" required>
        <input type="password" placeholder="Konfirmasi Password" name="confirmPassword" required>
        <button type="submit" class="signin">DAFTAR</button>
      </form>

      <div class="signup">
        Sudah punya akun? <a href="/login">Login</a>
      </div>

      <% if (typeof message !== 'undefined') { %>
        <div class="message"><%= message %></div>
      <% } %>
    </div>
  </div>
</body>
